{
    "compilerOptions": {
        "incremental": true,
        "tsBuildInfoFile": "./lib/tmp.increment",
        "target": "ES2017",
        "module": "commonjs",
        "declaration": true,
        "outDir": "./lib",
        "esModuleInterop": true,
        "allowUnusedLabels": false,
        "removeComments": true,
        "allowUmdGlobalAccess": true,
        "lib": [
            "es2017",
            "dom"
        ],
        // "skipLibCheck": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "strict": true,
        "strictNullChecks": true,
        "strictPropertyInitialization": true,
        "allowJs": false,
        "noImplicitOverride": true,
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
        "**/tests/*"
    ]
}